
<%= simple_form_for(@plan) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :income %>
    <%= f.input :fixed_ex %>
    <%= f.input :target_sa %>
    <%= f.input :old_savings %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
